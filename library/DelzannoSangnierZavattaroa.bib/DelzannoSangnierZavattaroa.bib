  keywords      = {Ad Hoc networks and broadcast protocols},
  month         = {08},
  title         = {Parameterized Verification of Safety Properties in Ad Hoc Network Protocols},
  url           = {http://arxiv.org/abs/1108.1864},
  year          = {2011},
