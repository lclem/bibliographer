  issn          = {0890-5401},
  journal       = {Information and Computation},
  keywords      = {Continuous time Markov decision processes and games, Optimal control, Discretisation},
  pages         = {106 - 129},
  title         = {Efficient approximation of optimal control for continuous-time Markov games},
