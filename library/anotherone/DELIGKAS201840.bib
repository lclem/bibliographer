  keywords      = {Approximate Nash equilibrium, Constrained equilibrium, Quasi-polynomial time, Lower bound, Exponential time hypothesis},
  pages         = {40 - 56},
  title         = {Inapproximability results for constrained approximate Nash equilibria},
