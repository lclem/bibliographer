
@Article{         hofmanmayrtotzke,
  abstract      = {One-counter nets (OCN) are Petri nets with exactly one unbounded place. They are equivalent to a subclass of one-counter automata with only a weak test for zero. We show that weak simulation preorder is decidable for OCN and that weak simulation approximants do not converge at level omega, but only at omega^2. In contrast, other semantic relations like weak bisimulation are undecidable for OCN, and so are weak (and strong) trace inclusion.},
  author        = {Piotr Hofman and Richard Mayr and Patrick Totzke},
  date-added    = {2013-07-09 13:09:13 +0000},
  date-modified = {2013-07-09 13:09:13 +0000},
  eprint        = {1304.4104},
  month         = {04},
  title         = {Decidability of Weak Simulation on One-counter Nets},
  url           = {http://arxiv.org/abs/1304.4104},
  year          = {2013},
