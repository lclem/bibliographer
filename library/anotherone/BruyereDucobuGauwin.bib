  eprint        = {1205.2841},
  keywords      = {visibly pushdown automata and tree automata},
  month         = {05},
  title         = {Visibly pushdown automata on trees: universality and u-universality},
  url           = {http://arxiv.org/abs/1205.2841},
  year          = {2012},
